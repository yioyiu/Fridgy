{
  "expo": {
    "name": "Fridgy",
    "slug": "fridgy",
    "version": "1.1.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/png/icon.png",
    "splash": {
      "image": "./assets/png/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fridgy.app",
      "buildNumber": "11",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to suggest nearby stores.",
        "NSUserNotificationsUsageDescription": "This app sends notifications to remind you about expiring ingredients.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help you quickly add ingredients to your fridge by voice input.",
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice recognition to add ingredients quickly.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.fridgy.app",
      "versionCode": 6,
      "adaptiveIcon": {
        "foregroundImage": "./assets/png/icon.png",
        "backgroundColor": "#4CAF50"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "NOTIFICATIONS",
        "POST_NOTIFICATIONS",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-notifications"
    ],
    "scheme": "fridgy",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3ae93e28-1b5a-4890-80b2-66aa8186006d"
      }
    }
  }
}
